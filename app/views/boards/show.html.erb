<h1 data-controller="heart" data-heart-id="<%= @board.id %>">
  看板 <%= @board.title %>
  <a data-action="click -> heart#favorite">
    <% if @board.favorited_by?(current_user) %>
      <i class="fas fa-heart" data-target="heart.heart"></i>
    <% else %>
      <i class="far fa-heart" data-target="heart.heart"></i>
    <% end %>
  </a>
</h1>

<p>
  [ 版主：<%= display_bm(@board) %> ]
</p>

<div>
  <%= link_to "new Post", new_board_post_path(@board) %>
</div>

<ul>
  <% @posts.each do |post| %>
    <li>
      [<%= post.display_username %>]
      <%= link_to post.title, post_path(post) %>
      <%= link_to  "編輯", edit_post_path(post) %>
    </li>
  <% end %>
</ul>

<%= link_to "Board Index", boards_path %>
