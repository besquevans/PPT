<ul>
  <li>
    <span>作者</span>
    <span><%= @post.user.account %></span>
  </li>
  <li>
    <span>標題</span>
    <span><%= @post.title %></span>
  </li>
  <li>
    <span>時間</span>
    <span><%= @post.created_at %></span>
  </li>
</ul>


<p>
  <%= @post.content %>
</p>

<hr>

<%= form_with(model: @comment, url: post_comments_path(@post)) do |f| %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>

<hr>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.content %>
    </li>
  <% end %>
</ul>